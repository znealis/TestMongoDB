                    -32px 32px #f9a825,
                    -36px 36px #ff5722;

    }
    .image{
            min-width: 50vw;
        }
    .grid-container {
        display: grid;
        animation: bg-animation 10s infinite;
        height: 630px;
        grid-template-columns: auto auto auto auto;
        grid-template-rows: auto auto;
        overflow-y: scroll;
        }
    .grid-contanier > div {
        animation: bg-animation 10s infinite;
        padding: 20px;
        font-size: 20px;
        text-align: center;
        min-height: 20vh;
        min-height: 30vw;
    }

    footer {
        text-align: center;
        padding: 3px;
        flex-direction: row;
        color: white;
        font-family:monaco;
        align-items: center; 
        justify-content: center;
        color:rgb(177, 225, 234);
        border-radius: 2px;
        cursor: pointer;
        transition: all linear 1s;
        height:45px; 
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    a:link, a:visited {
        color: white;
        padding: 14px 25px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

    body{
        animation: bg-animation 10s infinite;
    }

    @keyframes bg-animation {
    0% {
        background-color: red;
    }
    15% {
        background-color: yellow;
    }
    30% {
        background-color: green;
    }
    45% {
        background-color: blue;
    }
    60% {
        background-color: purple;
    }
    75% {
        background-color: pink;
    }
    90% {
        background-color: brown;
    }
    100% {
        background-color: red;
    }
    }

    .form{
        padding: 8px;
    }

    li{
        float:left;
    }

    .list-fix{
        float: none;
        display: block;
        padding: 12px;
        text-align: center;
        background-color: #111;
        color:white;
    }

    .img-container{
        position: relative;
    }

    .img-container:hover img{
        opacity: 0.3;
    }

    .details{
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .text{
        font: 28px "Alternate Gothic";
    }

    .img-container:hover .details{
        opacity: 1;
    }

    img{
        padding-top: 100px;
        width: 175px;
        height: 225px;
    }


    li a{
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-family: monaco;
    }
    li a:hover:not(.active) {
